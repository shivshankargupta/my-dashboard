<div class="text-center container mt-5" style="margin-top: 40px;">
 
   {{#if success}}
    <p class="alert-success">Updated successfully</p>
    {{/if}} 
    <br>
 
 
 
  <form class="form-signin" action="/blog/{{blogs._id}}" method="POST">

    <h1 class="text-white">Details of this project</h1>
    <div class="form-group">
      <input class="form-control" type="text" name="title" placeholder="Enter title" value="{{blogs.title}}">
    </div>

    <div class="form-group">
      <input class="form-control" type="text" name="image" placeholder="image" value="{{blogs.image}}">
    </div>

    <div class="form-group">
      <textarea class="form-control" name="description" placeholder="Description" rows="4">{{blogs.description}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>

  </form>
</div>